{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    
    {{ form_start(registrationForm) }}
    <div class="container">
        
        <form class="row g-3">
            <h1 class="my-5">Register</h1>
         <div class="d-flex justify-content-between">
          <div class="col-5">
            {{ form_row(registrationForm.prenom) }}
            
            
          </div>
          <div class="col-5">
            {{ form_row(registrationForm.nom) }}
            
        </div>
          </div>
          <div class="col-12">
            {{ form_row(registrationForm.email) }}
            
           
          </div>
          <div class="col-12">
            
            {{ form_row(registrationForm.addresse_rue) }} 
            
          </div>
          <div class="col-12">
            
            {{ form_row(registrationForm.addresse_ville) }}
          </div>
    
          <div class="col-12">
            <div class="mb-3">
              
              {{ form_row(registrationForm.addresse_codepostal) }}
            </div>
            <div class="col-12">
                
                {{ form_row(registrationForm.plainPassword.first) }}
               
              </div>
              <div class="col-12">
               
                {{ form_row(registrationForm.plainPassword.second) }}
               
              </div>
              {{ form_row(registrationForm.agreeTerms) }}
          </div>
        
          <div class="col-12">
            
            <button type="submit" class="btn-contact">Register</button>
        {{ form_end(registrationForm) }}
          </div>
        </form>
        
      </div>

    
        
        
        
        
        
        
        
        
        

        
{% endblock %}
